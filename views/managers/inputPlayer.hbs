    <div class="mt-3" id="create-tournament">
        <div class="col-8" style="text-align: center;">
            <h1 style="text-align: center;">Nhập Thông Tin Tuyển Thủ</h1>
            <form class="mt-4" action="" method="POST">
                <div class="form-group row">
                    <label for="ten-tuyen-thu" class="col-sm-3 col-form-label">Tên</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" id="ten-tuyen-thu">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ngay-sinh" class="col-sm-3 col-form-label" style="width:30%;">Ngày Sinh</label>
                    <div class="col-sm-9">
                        <input class="form-control" id="ngay-sinh"></input>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="gioi-tinh" class="col-sm-3 col-form-label">Giới Tính</label>
                    <div class="col-sm-9">
                        <select id="gioi-tinh" class="form-control" style="width:30%;">
                            <option selected>Nam</option>
                            <option>Nữ</option>
                            <option>Khác</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ky-nang" class="col-sm-3 col-form-label">Kỹ Năng</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" id="ky-nang" rows="3"></textarea>
                    </div>
                </div>

                <button class="btn btn-primary mt-4" type="submit">Thêm Tuyển Thủ</button>
            </form>
        </div>

    </div>
</div>


