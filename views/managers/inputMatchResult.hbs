<!-- As a heading -->
{{>manager_navbar}}

<div class="wrapper">
    <!-- Sidebar -->
    {{>manager_sidebar}}

    <div class="mt-3" id="create-tournament">
        <div class="col-8" style="text-align: center;">
            <h1 style="text-align: center;">Nhập Kết Quả Trận Đấu</h1>
            <form class="mt-4" action="" method="POST">
                <div class="form-group row mt-4">
                    <label for="ten-giai-dau" class="col-sm-3 col-form-label">Giải Đấu</label>
                    <div class="col-sm-9">
                        <select type="text" class="form-control" id="ten-giai-dau">
                            <option selected>Liên Minh Huyền Thoại lần I</option>
                            <option>Liên Minh Huyền Thoại lần II</option>
                            <option>Liên Minh Huyền Thoại lần III</option>
                            <option>PlayerUnknown's Battle Ground lần IV</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <label for="vong-dau" class="col-sm-3 col-form-label">Vòng Đấu</label>
                    <div class="col-sm-9">
                        <select type="text" class="form-control" id="vong-dau">
                            <option selected>Tứ Kết Nhánh Thắng</option>
                            <option>Tứ Kết Nhánh Thua</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <label for="tran-dau" class="col-sm-3 col-form-label">Trận Đấu</label>
                    <div class="col-sm-9" id="tran-dau">
                        <select class="col-sm-5" style="float: left; text-align: center;" type="text"
                            class="form-control" id="doi-1">
                            <option selected>Đội A</option>
                            <option>Đội B</option>
                        </select>
                        <select class="col-sm-5" style="float: right; text-align: center;" type="text"
                            class="form-control" id="doi-2">
                            <option selected>Đội C</option>
                            <option>Đội D</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="ty-so" class="col-sm-3 col-form-label">Tỷ Số</label>
                    <div class="col-sm-9" id="ty-so">
                        <div class="input-group-prepend">
                            <span class="rounded-left input-group-text" id="ten-doi-1"
                                style="border-radius:0px;"></span>
                            <input type="number" min="0" value="0" class="rounded-right form-control" id="ty-so-doi-1"
                                style="border-radius:0px; width: 20%;text-align: center;"></input>

                            <span class="rounded-left input-group-text ml-2" id="ten-doi-2"
                                style="border-radius:0px;"></span>
                            <input type="number" min="0" value="0" class="rounded-right form-control" id="ty-so-doi-2"
                                style="border-radius:0px; width: 20%;text-align: center;"></input>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="mo-ta" class="col-sm-3 col-form-label" style="width:30%;">Mô Tả</label>
                    <div class="col-sm-9">
                        <textarea class="form-control" id="mo-ta" rows="3"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="highlight" class="col-sm-3 col-form-label" style="width:30%;">Highlight</label>
                    <div class="col-sm-9">
                        <input type="file" id="highlight">
                        <label class="custom-file-label" for="highlight">Choose file</label>
                    </div>
                </div>
                <div style="float: right;">
                    <button class="btn btn-danger mt-4" href="#">Huỷ</button>
                    <button class="btn btn-primary mt-4" type="submit" href="#">Hoàn Thành</button>
                </div>

            </form>
        </div>

    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script
    src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<script>
    $('#thoi-gian').datetimepicker({
        // format: 'd/m/Y H:i'
        format: 'd/m/Y',
        timepicker: false,
        mask: true,
        value: 'dd-mm-yyyy'
    });
    document.getElementById("ten-doi-2").innerHTML = document.getElementById("doi-2").value;
    document.getElementById("ten-doi-1").innerHTML = document.getElementById("doi-1").value;
    $('select').on('change', function () {
        document.getElementById("ten-doi-2").innerHTML = document.getElementById("doi-2").value;
        document.getElementById("ten-doi-1").innerHTML = document.getElementById("doi-1").value;
    });
</script>