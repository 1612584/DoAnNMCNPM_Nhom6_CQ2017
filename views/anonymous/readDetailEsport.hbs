{{>header_index}}
<div class="wrapper">
    <div class="container">
        <div class="row">
            <h1 class="col-md-12 offset-3">Thông tin giải đấu</h1>
        </div>
        <div class="row row2">
            <div class="card mb-3" style="max-width: 1080px;">
                <div class="row no-gutters">
                    {{#with tournament}}
                    <div class="col-md-4 mt-1 ml-1">
                        <img src="/images/giaidau/{{id}}/{{img}}" alt="Anh giai dau"> 
                    </div>
                    <div class="col-md-7">
                        <div class="card mb-3 mt-1 mr-1" style="max-width: 800px;">
                            <div class="card-body">
                            <h5 class="card-title">{{name}}</h5>
                            <p class="card-text">{{detail}}</p>
                            <p class="card-text">Ngày bắt đầu: {{startDate}}</p>
                            <p class="card-text">Tối đa: {{amount}}</p>
                            <p class="card-text"><b>Điều kiện: </b><span>{{condition}}</span> </p>
                            <p class="card-text"><a href="#">Lịch thi đấu</a></p>
                            <p class="card-text"><a href="#">Danh sách thi đấu</a></p>
                            </div>
                        </div>
                       
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
</div>